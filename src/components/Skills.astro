---
const { skills, title } = Astro.props;
---

<section id="skills" class="py-24 px-4 bg-muted/30">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold mb-12">
      {title}
    </h2>

    <div class="grid md:grid-cols-2 gap-8">
      {skills.map(({ category, items }) => (
        <div class="space-y-4">
          <h3 class="text-xl font-semibold text-primary">
            {category}
          </h3>

          <div class="flex flex-wrap gap-2">
            {items.map((item) => (
              <span
                class="text-sm py-1.5 px-3 rounded-full bg-muted text-muted-foreground hover:bg-primary hover:text-primary-foreground transition-colors"
              >
                {item}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
