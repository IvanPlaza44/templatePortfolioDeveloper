---
const { items, title } = Astro.props;
---   

    
    <section id="experience" class="py-24 px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold mb-12">{ title }</h2>

        <div class="space-y-12">
          {items.map((exp) => (
            <div class="relative pl-8 border-l-2 border-border hover:border-primary transition-colors group">
              <div class="absolute -left-[9px] top-0 h-4 w-4 rounded-full bg-background border-2 border-border group-hover:border-primary transition-colors" />

              <div class="space-y-2">
                <p class="text-sm text-muted-foreground font-mono">{exp.period}</p>
                <h3 class="text-2xl font-semibold">{exp.title}</h3>
                <p class="text-primary font-medium">{exp.company}</p>
                <p class="text-muted-foreground leading-relaxed">{exp.description}</p>

                <div class="flex flex-wrap gap-2 pt-2">
                  {exp.stack.map((skill) => (
                    <span class="text-xs px-2 py-1 rounded bg-muted text-muted-foreground">
                      {skill}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>