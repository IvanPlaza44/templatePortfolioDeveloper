---
import { Github, Linkedin, Mail, ArrowDown } from '@lucide/astro';
const { name, greeting, role, description, btnPrimary, btnSecondary, github, linkedin, email } = Astro.props;
---

<section class="min-h-screen flex items-center justify-center px-4 relative ">
  <div class="max-w-4xl w-full">
    <div class="animate-in fade-in slide-in-from-bottom-4 duration-1000">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 text-balance">
        { greeting } <span class="text-primary">{ name }</span>
      </h1>

      <p class="text-xl md:text-2xl text-muted-foreground mb-4">
        { role }
      </p>

      <p class="text-lg text-muted-foreground mb-8 max-w-2xl text-pretty">
        { description }
      </p>

      <div class="flex flex-wrap gap-4 mb-12">
        <a
          href="#projects"
          class="group inline-flex items-center gap-2 rounded-lg bg-primary px-6 py-3 font-medium text-primary-foreground hover:opacity-90 transition"
        >
          { btnPrimary }
          <ArrowDown class="h-4 w-4 transition-transform group-hover:translate-y-1" />
        </a>

        <a
          download="Curriculum Vitae PDF"
          href="/cv.pdf"
          class="inline-flex items-center rounded-lg border px-6 py-3 font-medium hover:bg-muted transition"
        >
          { btnSecondary }
        </a>
      </div>

      <div class="flex gap-4">
        <a href={ github } class="text-muted-foreground hover:text-foreground">
          <Github class="h-6 w-6" />
          <span class="sr-only">GitHub</span>
        </a>

        <a href={ linkedin } class="text-muted-foreground hover:text-foreground">
          <Linkedin class="h-6 w-6" />
          <span class="sr-only">LinkedIn</span>
        </a>

        <a href={"mailto:" + email} class="text-muted-foreground hover:text-foreground">
          <Mail class="h-6 w-6" />
          <span class="sr-only">Email</span>
        </a>
      </div>
    </div>
  </div>

  <div class="absolute bottom-30 left-1/2 -translate-x-1/2 animate-bounce">
    <ArrowDown class="h-10 w-10 text-muted-foreground" />
  </div>
</section>
